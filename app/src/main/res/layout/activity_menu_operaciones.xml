<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_a4acbb265fd2e3c04cf41f159c0cf48"
    tools:context=".MenuOperaciones">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="259dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        android:text="ELIJA LA OPERACION QUE DESEA REALIZAR"
        android:textAlignment="center"
        android:textColor="#00BCD4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:columnCount="6"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView">
        <!-- Botones se agregarán dinámicamente en el código Java/Kotlin -->
    </GridLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="@color/teal_200"
        android:text="NUMEROS PERFECTOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/btnTrinomio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fibonacci"
        android:layout_width="331dp"
        android:layout_height="71dp"
        android:backgroundTint="@color/teal_200"
        android:onClick="fibonacci"
        android:text="FIBONACCI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnformulageneral"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="216dp"
        android:backgroundTint="@color/teal_200"
        android:text="FORMULA GENERAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/btnOperacionesBasicas"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIrTrapecio"
        android:layout_width="190dp"
        android:layout_height="81dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="404dp"
        android:backgroundTint="@color/teal_200"
        android:text="Trapecio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOperacionesBasicas"
        android:layout_width="200dp"
        android:layout_height="81dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="216dp"
        android:backgroundTint="@color/teal_200"
        android:text="OPERACIONES BASICAS"
        app:layout_constraintEnd_toStartOf="@+id/btnformulageneral"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPitagoras"
        android:layout_width="219dp"
        android:layout_height="80dp"
        android:layout_marginTop="560dp"
        android:backgroundTint="@color/teal_200"
        android:onClick="pitagoras"
        android:text="PITAGORAS"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="218dp"
        android:layout_height="71dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="408dp"
        android:backgroundTint="@color/teal_200"
        android:text="Area Triangulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnPrimos"
        android:layout_width="198dp"
        android:layout_height="74dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/teal_200"
        android:text="Numeros Primos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_said"
        android:layout_width="191dp"
        android:layout_height="80dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/teal_200"
        android:text="NUMEROS PRIMOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPentagono"
        android:layout_width="210dp"
        android:layout_height="83dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="472dp"
        android:backgroundTint="@color/teal_200"
        android:text="PENTAGONO"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTrinomio"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="@color/teal_200"
        android:text="TRINOMIO-MONOMIO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnJefersonY"
        android:layout_width="211dp"
        android:layout_height="79dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="312dp"
        android:backgroundTint="@color/teal_200"
        android:text="OPERACION FACTORIAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/btn_aldaz"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_aldaz"
        android:layout_width="191dp"
        android:layout_height="81dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="312dp"
        android:backgroundTint="@color/teal_200"
        android:text="EXPONENCIALES"
        app:layout_constraintEnd_toStartOf="@+id/btnJefersonY"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
