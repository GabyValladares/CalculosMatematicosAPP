<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuOperaciones">

    <ImageView
        android:id="@+id/gifBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lineas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="259dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:text="ELIJA LA OPERACION QUE DESEA REALIZAR"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:columnCount="6"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView">
        <!-- Botones se agregarán dinámicamente en el código Java/Kotlin -->
    </GridLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="140dp"
        android:text="NUMEROS PERFECTOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/btnTrinomio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fibonacci"
        android:layout_width="331dp"
        android:layout_height="71dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:onClick="fibonacci"
        android:text="FIBONACCI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnformulageneral"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="236dp"
        android:text="FORMULA GENERAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIrTrapecio"
        android:layout_width="190dp"
        android:layout_height="81dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="404dp"
        android:text="Trapecio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="236dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/btnformulageneral"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPitagoras"
        android:layout_width="203dp"
        android:layout_height="62dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="476dp"
        android:onClick="pitagoras"
        android:text="Pitagoras"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="218dp"
        android:layout_height="71dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="408dp"
        android:text="Area Triangulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnNPrimos"
        android:layout_width="196dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="12dp"
        android:text="Numeros Primos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_said"
        android:layout_width="191dp"
        android:layout_height="80dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="16dp"
        android:text="NUMEROS PRIMOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPentagono"
        android:layout_width="210dp"
        android:layout_height="83dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="560dp"
        android:text="PENTAGONO"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTrinomio"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="144dp"
        android:text="Trinomio-Monomio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnJefersonY"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="320dp"
        android:text="Operacion Factorial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="320dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/btnJefersonY"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
