<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_app"
    tools:context=".MenuOperaciones">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="259dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        android:text="ELIJA LA OPERACION QUE DESEA REALIZAR"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:columnCount="6"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView">
        <!-- Botones se agregarán dinámicamente en el código Java/Kotlin -->
    </GridLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="108dp"
        android:text="NUMEROS PERFECTOS"
        app:backgroundTint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/btnTrinomio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fibonacci"
        android:layout_width="400dp"
        android:layout_height="73dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="672dp"
        android:onClick="fibonacci"
        android:text="FIBONACCI"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnformulageneral"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="216dp"
        android:text="FORMULA GENERAL"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/btnOperacionesBasicas"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIrTrapecio"
        android:layout_width="202dp"
        android:layout_height="66dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="400dp"
        android:text="TRAPECIO"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOperacionesBasicas"
        android:layout_width="200dp"
        android:layout_height="81dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="216dp"
        android:text="OPERACIONES BASICAS"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toStartOf="@+id/btnformulageneral"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPitagoras"
        android:layout_width="196dp"
        android:layout_height="77dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="568dp"
        android:onClick="pitagoras"
        android:text="PITAGORAS"
        app:backgroundTint="#3F51B5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="186dp"
        android:layout_height="66dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="400dp"
        android:text="AREA TRIANGULO"
        app:backgroundTint="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNPrimos"
        android:layout_width="198dp"
        android:layout_height="74dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="476dp"
        android:text="NUMEROS PRIMOS"
        app:backgroundTint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/btnPentagono"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_said"
        android:layout_width="191dp"
        android:layout_height="80dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="12dp"
        android:text="NUMEROS PRIMOS"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPentagono"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="476dp"
        android:text="PENTAGONO"
        app:backgroundTint="#03A9F4"
        app:layout_constraintEnd_toStartOf="@+id/btnNPrimos"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTrinomio"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:text="TRINOMIO-MONOMIO"
        app:backgroundTint="#03A9F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnJefersonY"
        android:layout_width="211dp"
        android:layout_height="79dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="312dp"
        android:text="OPERACION FACTORIAL"
        app:backgroundTint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/btn_aldaz"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_aldaz"
        android:layout_width="191dp"
        android:layout_height="81dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="312dp"
        android:text="EXPONENCIALES"
        app:backgroundTint="#03A9F4"
        app:layout_constraintEnd_toStartOf="@+id/btnJefersonY"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
