<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93C4DA"
    tools:context=".MultiplicacionMonomios">

    <Button
        android:id="@+id/bttregresar"
        android:layout_width="138dp"
        android:layout_height="64dp"
        android:layout_marginBottom="88dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="REGRESAR"
        android:textAllCaps="false"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        app:backgroundTint="#FBFCFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        tools:fontFamily="serif" />

    <Button
        android:id="@+id/btttrinomio"
        android:layout_width="132dp"
        android:layout_height="64dp"
        android:layout_marginBottom="88dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="IR AL TRINOMIO"
        android:textAllCaps="true"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        app:backgroundTint="#FEFEFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        tools:fontFamily="serif" />

    <TextView
        android:id="@+id/lblmonomio2"
        android:layout_width="147dp"
        android:layout_height="27dp"
        android:fontFamily="serif-monospace"
        android:text="RESPUESTA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FBF9F9"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519"
        tools:fontFamily="serif" />

    <TextView
        android:id="@+id/lblmonomio"
        android:layout_width="382dp"
        android:layout_height="81dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="serif-monospace"
        android:text="MULTIPLICACION DE MONOMIOS"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="serif" />

    <EditText
        android:id="@+id/txtnumeroone"
        android:layout_width="202dp"
        android:layout_height="71dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="text"
        android:textColor="#FBF9F9"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="numero" />

    <EditText
        android:id="@+id/txtnumerotwo"
        android:layout_width="202dp"
        android:layout_height="71dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="284dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="text"
        android:textColor="#FBF9F9"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="numero" />

    <Button
        android:id="@+id/bttcalcularmono"
        android:layout_width="148dp"
        android:layout_height="61dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Calcular"
        android:textAllCaps="false"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        app:backgroundTint="#F4F5F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793"
        tools:fontFamily="serif" />

    <TextView
        android:id="@+id/lblres"
        android:layout_width="189dp"
        android:layout_height="56dp"
        android:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61" />
</androidx.constraintlayout.widget.ConstraintLayout>