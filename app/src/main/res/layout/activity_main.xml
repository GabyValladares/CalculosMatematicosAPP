<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spiderman"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblResultado2"
        android:layout_width="186dp"
        android:layout_height="83dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="252dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtladoC2"
        android:layout_width="214dp"
        android:layout_height="56dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="16dp"
        android:background="@color/material_dynamic_secondary20"
        android:ems="10"
        android:inputType="text"
        android:textColor="#100F0F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="C" />

    <TextView
        android:id="@+id/lblTitulo2"
        android:layout_width="244dp"
        android:layout_height="69dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="72dp"
        android:text="TEOREMA DE PITAGORAS"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLadoA2"
        android:layout_width="122dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="28dp"
        android:text="Ingrese  Lado A"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintEnd_toStartOf="@+id/txtladoA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLadoB2"
        android:layout_width="116dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="28dp"
        android:text="Ingrese  Lado B"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintEnd_toStartOf="@+id/txtladoB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLadoC2"
        android:layout_width="119dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="24dp"
        android:text="Ingrese  Lado C"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintEnd_toStartOf="@+id/txtladoC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtladoA2"
        android:layout_width="209dp"
        android:layout_height="59dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="16dp"
        android:background="@color/material_dynamic_secondary20"
        android:ems="10"
        android:inputType="text"
        android:shadowColor="#F1EBEB"
        android:textColor="#0B0B0B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A" />

    <EditText
        android:id="@+id/txtladoB2"
        android:layout_width="211dp"
        android:layout_height="60dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="16dp"
        android:background="@color/material_dynamic_secondary20"
        android:ems="10"
        android:inputType="text"
        android:textColor="#171616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="B" />

    <Button
        android:id="@+id/btnCalcula"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="108dp"
        android:onClick="calcula"
        android:text="CALCULAR"
        android:textColor="@color/design_default_color_error"
        app:backgroundTint="@color/material_dynamic_secondary20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="regresar"
        android:text="REGRESAR"
        android:textColor="@color/design_default_color_error"
        app:backgroundTint="@color/material_dynamic_secondary20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>