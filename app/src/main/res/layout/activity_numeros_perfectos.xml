<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93C4DA"
    app:guidelineUseRtl="true"
    tools:context=".MainNumerosPerfectos">


    <Button
        android:id="@+id/btnVolverMenu"
        android:layout_width="217dp"
        android:layout_height="63dp"
        android:fontFamily="serif"
        android:text="VOLVER"
        android:textColor="#03A9F4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:backgroundTint="#FDFBFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

    <TextView
        android:layout_width="211dp"
        android:layout_height="96dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="NUMEROS PERFECTOS"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        tools:fontFamily="serif" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:fontFamily="sans-serif"
        android:text="Ingrese numero a calcular"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368"
        tools:fontFamily="serif" />

    <EditText
        android:id="@+id/edNum1"
        android:layout_width="183dp"
        android:layout_height="85dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431"
        tools:text="......" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:fontFamily="sans-serif"
        android:text="Resultado:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="199dp"
        android:layout_height="103dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Resultado"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777"
        tools:fontFamily="serif" />

    <Button
        android:id="@+id/btnDividir"
        android:layout_width="95dp"
        android:layout_height="112dp"
        android:fontFamily="serif"
        android:text="OK"
        android:textColor="#03A9F4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:backgroundTint="#FBFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408" />

</androidx.constraintlayout.widget.ConstraintLayout>