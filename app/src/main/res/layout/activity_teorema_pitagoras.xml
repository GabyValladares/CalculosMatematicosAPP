<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragon_ball_fondo_3"
    android:onClick="calcula"
    tools:context=".teoremaPitagoras">

    <EditText
        android:id="@+id/txtladoC"
        android:layout_width="214dp"
        android:layout_height="56dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="20dp"
        android:background="#D6C0FD"
        android:ems="10"
        android:inputType="text"
        android:textColor="#100F0F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="C" />

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="280dp"
        android:layout_height="84dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="84dp"
        android:text="TEOREMA DE PITAGORAS"
        android:textAlignment="center"
        android:textColor="#00BCD4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLadoA"
        android:layout_width="129dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="28dp"
        android:text="Ingrese  Lado A"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/txtladoA"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLadoB"
        android:layout_width="129dp"
        android:layout_height="38dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="28dp"
        android:text="Ingrese  Lado B"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/txtladoB"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLadoC"
        android:layout_width="128dp"
        android:layout_height="51dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="24dp"
        android:text="Ingrese  Lado C"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/txtladoC"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtladoA"
        android:layout_width="209dp"
        android:layout_height="59dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="24dp"
        android:background="#D6C0FD"
        android:ems="10"
        android:inputType="text"
        android:shadowColor="#F1EBEB"
        android:textColor="#0B0B0B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A" />

    <EditText
        android:id="@+id/txtladoB"
        android:layout_width="211dp"
        android:layout_height="60dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="24dp"
        android:background="#D6C0FD"
        android:ems="10"
        android:inputType="text"
        android:textColor="#171616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="B" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="127dp"
        android:layout_height="57dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="144dp"
        android:onClick="calcula"
        android:text="CALCULAR"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:backgroundTint="@color/teal_200"
        app:iconTint="#FFF6F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lblResultado"
        android:layout_width="84dp"
        android:layout_height="43dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>