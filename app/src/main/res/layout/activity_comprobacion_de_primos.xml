<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#070707"
    android:foregroundTint="#1B1A1A"
    tools:context=".ComprobacionDePrimos">

    <TextView
        android:id="@+id/textView"
        android:layout_width="362dp"
        android:layout_height="111dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="606dp"
        android:drawableTint="#121212"
        android:fontFamily="monospace"
        android:foregroundTint="#070707"
        android:text="Comprobar Numeros Primos"
        android:textColor="#FDFCFC"
        android:textSize="34sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/txtNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="531dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#FBFBFB" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="89dp"
        android:foregroundTint="#00BCD4"
        android:text="Calcular"
        app:backgroundTint="#00BCD4" />

    <TextView
        android:id="@+id/lblRespuesta"
        android:layout_width="377dp"
        android:layout_height="101dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="398dp"
        android:textColor="#FCFCFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblRespuestaSuma"
        android:layout_width="160dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="301dp"
        android:textColor="#27272B"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblRespuesta3"
        android:layout_width="224dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="197dp"
        android:textColor="#27272B"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="279dp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="#00BCD4"
        android:drawableTint="#00BCD4"
        android:foregroundTint="#00BCD4"
        android:text="Regresar" />

</RelativeLayout>