<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93C4DA"
    tools:context=".TinomioCuadradoPerfecto">

    <TextView
        android:id="@+id/txttitulo2"
        android:layout_width="148dp"
        android:layout_height="29dp"
        android:layout_marginTop="504dp"
        android:fontFamily="serif-monospace"
        android:text="RESPUESTA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F8F5F5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="serif" />

    <EditText
        android:id="@+id/txtnumerodos"
        android:layout_width="202dp"
        android:layout_height="71dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="284dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="text"
        android:textColor="#F8F5F5"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="numero" />

    <EditText
        android:id="@+id/txtnumerotres"
        android:layout_width="202dp"
        android:layout_height="71dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="392dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="text"
        android:textColor="#F8F5F5"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="numero" />

    <Button
        android:id="@+id/bttcalcular"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Calcular"
        android:textAllCaps="false"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        app:backgroundTint="#FDFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="parent"
        tools:fontFamily="serif" />

    <Button
        android:id="@+id/bttregresarOper"
        android:layout_width="166dp"
        android:layout_height="73dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="REGRESAR"
        android:textAllCaps="false"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        app:backgroundTint="#FDFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:fontFamily="serif" />

    <TextView
        android:id="@+id/txttitulo"
        android:layout_width="255dp"
        android:layout_height="62dp"
        android:layout_marginTop="60dp"
        android:fontFamily="serif-monospace"
        android:text="CUADRADO PERFECTO"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F8F5F5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="serif" />

    <EditText
        android:id="@+id/txtnumerouno"
        android:layout_width="202dp"
        android:layout_height="71dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="text"
        android:textColor="#F8F5F5"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="numero" />

    <TextView
        android:id="@+id/lblrespuesta"
        android:layout_width="226dp"
        android:layout_height="80dp"
        android:layout_marginTop="548dp"
        android:fontFamily="serif"
        android:textColor="#F8F5F5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>