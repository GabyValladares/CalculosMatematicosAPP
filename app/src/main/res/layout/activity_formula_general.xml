<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnregresar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragon_ball_fondo_3"
    tools:context=".FormulaGeneral"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="57dp">

    <TextView
        android:id="@+id/txtnega"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="660dp"
        android:background="#F3F2F4"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NEGATIVO" />

    <TextView
        android:id="@+id/txtposi"
        android:layout_width="180dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="660dp"
        android:background="@color/material_dynamic_neutral95"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="POSITIVO" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="178dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="616dp"
        android:background="#673AB7"
        android:text="RESULTADO POSITIVO :"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="178dp"
        android:layout_height="35dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="616dp"
        android:background="#673AB7"
        android:text="RESULTADO NEGATIVO :"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ednumeroc"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="368dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="numero c" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="252dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="332dp"
        android:text="INGRESE EL TERCER NUMERO:"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="252dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="228dp"
        android:text="INGRESE EL SEGUNDO NUMERO:"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="354dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="48dp"
        android:text="FORMULA GENERAL"
        android:textAlignment="center"
        android:textColor="#00BCD4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="252dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="120dp"
        android:text="INGRESE EL PRIMER NUMERO:"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ednumeroa"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="164dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="numero a" />

    <EditText
        android:id="@+id/ednumerob"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="264dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="numero b" />

    <Button
        android:id="@+id/button"
        android:layout_width="179dp"
        android:layout_height="60dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="232dp"
        android:onClick="calculaFormula"
        android:text="CALCULAR"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnregresa"
        android:layout_width="127dp"
        android:layout_height="53dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="164dp"
        android:backgroundTint="@color/teal_200"
        android:text="REGRESAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>