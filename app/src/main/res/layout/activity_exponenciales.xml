<!-- activity_exponenciales.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exponenciales">

    <EditText
        android:id="@+id/edtBase"
        android:layout_width="327dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="22dp"
        android:hint="Ingrese el entero" />

    <EditText
        android:id="@+id/edtExponente"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_below="@id/edtBase"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="41dp"
        android:hint="Ingrese el exponente" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="159dp"
        android:layout_height="73dp"
        android:layout_below="@id/edtExponente"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="122dp"
        android:backgroundTint="#E91E63"
        android:text="Calcular" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="315dp"
        android:layout_height="81dp"
        android:layout_below="@id/btnCalcular"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-361dp"
        android:layout_marginEnd="51dp" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="155dp"
        android:layout_height="83dp"
        android:layout_below="@id/txtResultado"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="129dp"
        android:backgroundTint="#E91E63"
        android:text="Regresar" />

</RelativeLayout>
